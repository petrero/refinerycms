<% content_for :body_content_title do %>
  <%= @piano.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @piano.name %>
    </p>
  </section>
  <section>
    <h1>Dimension</h1>
    <p>
      <%=raw @piano.dimension %>
    </p>
  </section>
  <section>
    <h1>Manufactured On</h1>
    <p>
      <%=raw @piano.manufactured_on %>
    </p>
  </section>
  <section>
    <h1>Upright</h1>
    <p>
      <%=raw @piano.upright %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @piano.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @piano.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pianos">
      <% @pianos.each do |piano| %>
        <li>
          <%= link_to piano.name, refinery.pianos_piano_path(piano) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
